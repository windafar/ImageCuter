<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">
    <Grid>
        <ScrollViewer>
        <WrapPanel ScrollViewer.HorizontalScrollBarVisibility="Visible">
        <Image x:Name="imagesrc" Loaded="imagesrc_Loaded" HorizontalAlignment="Left" Margin="0,0,1,0" Height="300"/>
        <Image x:Name="VewImage" Loaded="VewImage_Loaded" HorizontalAlignment="Left" Margin="0,0,1,0" Height="300"/>
        <Image x:Name="image" Loaded="image_Loaded" HorizontalAlignment="Left" Margin="0,0,1,0" Height="300"/>
        <Image x:Name="imagecut" Loaded="imagecut_Loaded" Margin="0,0,1,0" HorizontalAlignment="Left" Height="300" />
        <TextBlock Name="timeTextBlock"></TextBlock>
        </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>
